<Window x:Class="Vanilla_RTX_App.PackUpdate.PackUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vanilla RTX">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>


    <Grid>
        <!-- Light Theme Overlay -->
        <Border x:Name="LightThemeOverlay"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsHitTestVisible="False"
                Visibility="{ThemeResource LightThemeBackgroundVisibility}"
                Canvas.ZIndex="-1">
            <Border.Background>
                <SolidColorBrush Color="#17373737" />
            </Border.Background>
        </Border>

        <!-- Main Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title Bar Area -->
            <Grid Grid.Row="0"
                  x:Name="TitleBarArea"
                  Background="Transparent">
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <TextBlock Text="Install or update Vanilla RTX resource packs"
                               Margin="0,6,0,5"
                               VerticalAlignment="Center"
                               IsTextScaleFactorEnabled="False"
                               IsHitTestVisible="False"
                               x:Name="WindowTitle" />
                </Grid>
            </Grid>

            <!-- Scrollable Content Area -->
            <ScrollViewer Grid.Row="1"
                          x:Name="ContentScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="24"
                            Margin="16">

                    <!-- Main Pack Panels -->
                    <Grid x:Name="MainPanelsGrid"
                          MaxHeight="600">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Shadow receiver grid -->
                        <Grid x:Name="ShadowReceiverGrid"
                              Grid.ColumnSpan="5" />


                        <!-- Panel 1: Vanilla RTX Normals -->
                        <Border Grid.Column="0"
                                x:Name="NormalsPanel"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Translation="0,0,32"
                                MaxHeight="600">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Image Section -->
                                <Grid Grid.Row="0">
                                    <Border CornerRadius="8,8,0,0">
                                        <Image Source="ms-appx:///Assets/covers/normals.cover.png"
                                               Stretch="UniformToFill"
                                               IsHitTestVisible="False"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               MaxHeight="325"
                                               CacheMode="BitmapCache" />
                                    </Border>

                                    <!-- Overlay with title and description -->
                                    <Border x:Name="NormalsOverlay"
                                            CornerRadius="0,0,0,0"
                                            VerticalAlignment="Bottom"
                                            Padding="16,10,16,12"
                                            Opacity="0">
                                        <Border.Background>
                                            <AcrylicBrush TintColor="{ThemeResource OverlayBackgroundColor}"
                                                          TintOpacity="0.0"
                                                          TintLuminosityOpacity="0.64"
                                                          FallbackColor="{ThemeResource OverlayBackgroundColor}" />
                                        </Border.Background>

                                        <StackPanel Spacing="4">
                                            <!-- Pack Name -->
                                            <HyperlinkButton Content="Vanilla RTX Normals"
                                                             FontSize="18"
                                                             Foreground="{ThemeResource OverlayTextBrush}"
                                                             FontWeight="SemiBold"
                                                             Padding="0"
                                                             HorizontalAlignment="Left"
                                                             NavigateUri="https://www.curseforge.com/minecraft-bedrock/texture-packs/truly-vanilla-rtx"
                                                             IsTextScaleFactorEnabled="False" />

                                            <!-- Description -->
                                            <TextBlock Text="Vanilla RTX with handcrafted 16x normal maps for all blocks!"
                                                       Foreground="{ThemeResource OverlayTextBrush}"
                                                       FontSize="13"
                                                       Opacity="0.9"
                                                       TextWrapping="Wrap"
                                                       IsTextScaleFactorEnabled="False" />
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Info Section -->
                                <StackPanel Grid.Row="1"
                                            Padding="16"
                                            Spacing="4">
                                    <!-- Installed Version -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6">
                                        <TextBlock Text="Installed:"
                                                   FontSize="13"
                                                   Opacity="0.75"
                                                   IsTextScaleFactorEnabled="False" />
                                        <TextBlock x:Name="VanillaRTXNormals_InstalledVersion"
                                                   Text="Not installed"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   IsTextScaleFactorEnabled="False" />
                                    </StackPanel>

                                    <!-- Available Version -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6">
                                        <TextBlock Text="Available:"
                                                   FontSize="13"
                                                   Opacity="0.75"
                                                   IsTextScaleFactorEnabled="False" />
                                        <ProgressRing x:Name="VanillaRTXNormals_AvailableLoading"
                                                      Width="16"
                                                      Height="16"
                                                      IsActive="True"
                                                      Visibility="Visible" />
                                        <TextBlock x:Name="VanillaRTXNormals_AvailableVersion"
                                                   Text="Checking..."
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   IsTextScaleFactorEnabled="False"
                                                   Visibility="Collapsed" />
                                    </StackPanel>

                                    <!-- Controls Row -->
                                    <Grid Margin="0,16,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Enhancement Toggle -->
                                        <ToggleSwitch x:Name="VanillaRTXNormals_EnhancementsToggle"
                                                      Grid.Column="0"
                                                      Header="Enhancements"
                                                      IsOn="True"
                                                      IsTextScaleFactorEnabled="False" />

                                        <!-- Install Button -->
                                        <Grid Grid.Column="2"
                                              MinWidth="120"
                                              MinHeight="60">
                                            <Button x:Name="VanillaRTXNormals_InstallButton"
                                                    Content="Install"
                                                    FontWeight="SemiBold"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    IsEnabled="False"
                                                    IsTextScaleFactorEnabled="False" />
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Panel 2: Vanilla RTX -->
                        <Border Grid.Column="2"
                                x:Name="VanillaPanel"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Translation="0,0,32"
                                MaxHeight="600">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Image Section -->
                                <Grid Grid.Row="0">
                                    <Border CornerRadius="8,8,0,0">
                                        <Image Source="ms-appx:///Assets/covers/regular.cover.png"
                                               Stretch="UniformToFill"
                                               IsHitTestVisible="False"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               MaxHeight="325"
                                               CacheMode="BitmapCache" />
                                    </Border>

                                    <!-- Overlay with title and description -->
                                    <Border x:Name="VanillaOverlay"
                                            CornerRadius="0,0,0,0"
                                            VerticalAlignment="Bottom"
                                            Padding="16,10,16,12"
                                            Opacity="0">
                                        <Border.Background>
                                            <AcrylicBrush TintColor="{ThemeResource OverlayBackgroundColor}"
                                                          TintOpacity="0.0"
                                                          TintLuminosityOpacity="0.64"
                                                          FallbackColor="{ThemeResource OverlayBackgroundColor}" />
                                        </Border.Background>

                                        <StackPanel Spacing="4">
                                            <!-- Pack Name -->
                                            <HyperlinkButton Content="Vanilla RTX"
                                                             FontSize="18"
                                                             Foreground="{ThemeResource OverlayTextBrush}"
                                                             FontWeight="SemiBold"
                                                             Padding="0"
                                                             HorizontalAlignment="Left"
                                                             NavigateUri="https://www.curseforge.com/minecraft-bedrock/texture-packs/vanilla-rtx"
                                                             IsTextScaleFactorEnabled="False" />

                                            <!-- Description -->
                                            <TextBlock Text="The default ray-traced Minecraft graphics, everything is covered!"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OverlayTextBrush}"
                                                       Opacity="0.9"
                                                       TextWrapping="Wrap"
                                                       IsTextScaleFactorEnabled="False" />
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Info Section -->
                                <StackPanel Grid.Row="1"
                                            Padding="16"
                                            Spacing="4">
                                    <!-- Installed Version -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6">
                                        <TextBlock Text="Installed:"
                                                   FontSize="13"
                                                   Opacity="0.75"
                                                   IsTextScaleFactorEnabled="False" />
                                        <TextBlock x:Name="VanillaRTX_InstalledVersion"
                                                   Text="Not installed"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   IsTextScaleFactorEnabled="False" />
                                    </StackPanel>

                                    <!-- Available Version -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6">
                                        <TextBlock Text="Available:"
                                                   FontSize="13"
                                                   Opacity="0.75"
                                                   IsTextScaleFactorEnabled="False" />
                                        <ProgressRing x:Name="VanillaRTX_AvailableLoading"
                                                      Width="16"
                                                      Height="16"
                                                      IsActive="True"
                                                      Visibility="Visible" />
                                        <TextBlock x:Name="VanillaRTX_AvailableVersion"
                                                   Text="Checking..."
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   IsTextScaleFactorEnabled="False"
                                                   Visibility="Collapsed" />
                                    </StackPanel>

                                    <!-- Controls Row -->
                                    <Grid Margin="0,16,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Enhancement Toggle -->
                                        <ToggleSwitch x:Name="VanillaRTX_EnhancementsToggle"
                                                      Grid.Column="0"
                                                      Header="Enhancements"
                                                      IsOn="True"
                                                      IsTextScaleFactorEnabled="False" />

                                        <!-- Install Button -->
                                        <Grid Grid.Column="2"
                                              MinWidth="120"
                                              MinHeight="60">
                                            <Button x:Name="VanillaRTX_InstallButton"
                                                    Content="Install"
                                                    FontWeight="SemiBold"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    IsEnabled="False"
                                                    IsTextScaleFactorEnabled="False" />
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Panel 3: Vanilla RTX Opus -->
                        <Border Grid.Column="4"
                                x:Name="OpusPanel"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Translation="0,0,32"
                                MaxHeight="600">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Image Section -->
                                <Grid Grid.Row="0">
                                    <Border CornerRadius="8,8,0,0">
                                        <Image Source="ms-appx:///Assets/covers/opus.cover.png"
                                               Stretch="UniformToFill"
                                               IsHitTestVisible="False"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               MaxHeight="325"
                                               CacheMode="BitmapCache" />
                                    </Border>

                                    <!-- Overlay with title and description -->
                                    <Border x:Name="OpusOverlay"
                                            CornerRadius="0,0,0,0"
                                            VerticalAlignment="Bottom"
                                            Padding="16,10,16,12"
                                            Opacity="0">
                                        <Border.Background>
                                            <AcrylicBrush TintColor="{ThemeResource OverlayBackgroundColor}"
                                                          TintOpacity="0.0"
                                                          TintLuminosityOpacity="0.64"
                                                          FallbackColor="{ThemeResource OverlayBackgroundColor}" />
                                        </Border.Background>

                                        <StackPanel Spacing="4">
                                            <!-- Pack Name -->
                                            <HyperlinkButton Content="Vanilla RTX Opus"
                                                             FontSize="18"
                                                             Foreground="{ThemeResource OverlayTextBrush}"
                                                             FontWeight="SemiBold"
                                                             Padding="0"
                                                             HorizontalAlignment="Left"
                                                             NavigateUri="https://www.curseforge.com/minecraft-bedrock/texture-packs/vanilla-rtx-opus"
                                                             IsTextScaleFactorEnabled="False" />

                                            <!-- Description -->
                                            <TextBlock Text="The composition of both Vanilla RTX and Vanilla RTX Normals!"
                                                       FontSize="13"
                                                       Foreground="{ThemeResource OverlayTextBrush}"
                                                       Opacity="0.9"
                                                       TextWrapping="Wrap"
                                                       IsTextScaleFactorEnabled="False" />
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Info Section -->
                                <StackPanel Grid.Row="1"
                                            Padding="16"
                                            Spacing="4">
                                    <!-- Installed Version -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6">
                                        <TextBlock Text="Installed:"
                                                   FontSize="13"
                                                   Opacity="0.75"
                                                   IsTextScaleFactorEnabled="False" />
                                        <TextBlock x:Name="VanillaRTXOpus_InstalledVersion"
                                                   Text="Not installed"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   IsTextScaleFactorEnabled="False" />
                                    </StackPanel>

                                    <!-- Available Version -->
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="6">
                                        <TextBlock Text="Available:"
                                                   FontSize="13"
                                                   Opacity="0.75"
                                                   IsTextScaleFactorEnabled="False" />
                                        <ProgressRing x:Name="VanillaRTXOpus_AvailableLoading"
                                                      Width="16"
                                                      Height="16"
                                                      IsActive="True"
                                                      Visibility="Visible" />
                                        <TextBlock x:Name="VanillaRTXOpus_AvailableVersion"
                                                   Text="Checking..."
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   IsTextScaleFactorEnabled="False"
                                                   Visibility="Collapsed" />
                                    </StackPanel>

                                    <!-- Controls Row -->
                                    <Grid Margin="0,16,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Enhancement Toggle -->
                                        <ToggleSwitch x:Name="VanillaRTXOpus_EnhancementsToggle"
                                                      Grid.Column="0"
                                                      Header="Enhancements"
                                                      IsOn="True"
                                                      IsTextScaleFactorEnabled="False" />

                                        <!-- Install Button -->
                                        <Grid Grid.Column="2"
                                              MinWidth="120"
                                              MinHeight="60">
                                            <Button x:Name="VanillaRTXOpus_InstallButton"
                                                    Content="Install"
                                                    FontWeight="SemiBold"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    IsEnabled="False"
                                                    IsTextScaleFactorEnabled="False" />
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- SPECIAL PANEL -->
                    <Border x:Name="SpecialOccasionPanel"
                            CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            Translation="0,0,32"
                            MaxHeight="325"
                            Visibility="Collapsed">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- Description section: 1 panel width -->
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="12" />
                                <!-- Image section: 2 panels + 1 gap width -->
                                <ColumnDefinition Width="2.1*" />
                            </Grid.ColumnDefinitions>

                            <!-- Description Section -->
                            <StackPanel Grid.Column="0"
                                        Padding="16"
                                        Spacing="10"
                                        VerticalAlignment="Center">
                                <TextBlock Text="❄️ Merry Christmas! ❄"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           IsTextScaleFactorEnabled="False" />
                                <TextBlock Text="Get in the holiday spirit and jolly up Vanilla RTX with this special seasonal extension! Transform the world into a winter wonderland with frost-covered blocks, a freezing-cold Nether plus lots of other festive changes! Ho, ho, ho!
                                           — Cubeir Claus"
                                           FontSize="13"
                                           Opacity="0.9"
                                           TextWrapping="Wrap"
                                           IsTextScaleFactorEnabled="False" />
                                <!-- Download Button -->
                                <HyperlinkButton Content="Download Everwinter"
                                                 FontSize="18"
                                                 FontWeight="SemiBold"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,8,0,0"
                                                 NavigateUri="https://www.curseforge.com/minecraft-bedrock/texture-packs/everwinter"
                                                 IsTextScaleFactorEnabled="False" />
                            </StackPanel>

                            <!-- Image Section with Overlay -->
                            <Grid Grid.Column="2">
                                <Border CornerRadius="0,8,8,0">
                                    <Image Source="ms-appx:///Assets/covers/everwinter.cover.png"
                                           Stretch="UniformToFill"
                                           IsHitTestVisible="False"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           CacheMode="BitmapCache" />
                                </Border>
                                <!-- Overlay -->
                                <Border x:Name="SpecialOccasionOverlay"
                                        CornerRadius="0"
                                        VerticalAlignment="Center"
                                        Padding="16,10,16,12"
                                        Opacity="0">
                                    <Border.Background>
                                        <AcrylicBrush TintColor="{ThemeResource OverlayBackgroundColor}"
                                                      TintOpacity="0.0"
                                                      TintLuminosityOpacity="0.64"
                                                      FallbackColor="{ThemeResource OverlayBackgroundColor}" />
                                    </Border.Background>
                                    <StackPanel Spacing="4">
                                        <HyperlinkButton Content="Vanilla RTX: Everwinter Extension"
                                                         FontSize="20"
                                                         Foreground="{ThemeResource OverlayTextBrush}"
                                                         FontWeight="SemiBold"
                                                         Padding="0"
                                                         HorizontalAlignment="Left"
                                                         NavigateUri="https://www.curseforge.com/minecraft-bedrock/texture-packs/everwinter"
                                                         IsTextScaleFactorEnabled="False" />
                                        <TextBlock Text="An extension for the Vanilla RTX resource pack, all blocks are covered in frost! Featuring unyielding cold!"
                                                   FontSize="14"
                                                   Foreground="{ThemeResource OverlayTextBrush}"
                                                   Opacity="0.9"
                                                   TextWrapping="Wrap"
                                                   IsTextScaleFactorEnabled="False" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Secondary Packs Section -->
                    <Grid MaxHeight="325">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Secondary Pack 1: Vanilla RTX Add-Ons -->
                        <Border Grid.Column="0"
                                x:Name="AddOnsPanel"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Translation="0,0,32">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>

                            <Grid>
                                <Border CornerRadius="8">
                                    <Image Source="ms-appx:///Assets/covers/addons.cover.png"
                                           Stretch="UniformToFill"
                                           IsHitTestVisible="False"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           MaxHeight="325"
                                           CacheMode="BitmapCache" />
                                </Border>

                                <!-- Overlay with title and description -->
                                <Border x:Name="AddOnsOverlay"
                                        CornerRadius="0"
                                        VerticalAlignment="Center"
                                        Padding="16,10,16,12"
                                        Opacity="0">
                                    <Border.Background>
                                        <AcrylicBrush TintColor="{ThemeResource OverlayBackgroundColor}"
                                                      TintOpacity="0.0"
                                                      TintLuminosityOpacity="0.64"
                                                      FallbackColor="{ThemeResource OverlayBackgroundColor}" />
                                    </Border.Background>

                                    <StackPanel Spacing="4">
                                        <HyperlinkButton Content="Vanilla RTX Add-Ons"
                                                         FontSize="18"
                                                         Foreground="{ThemeResource OverlayTextBrush}"
                                                         FontWeight="SemiBold"
                                                         Padding="0"
                                                         HorizontalAlignment="Left"
                                                         NavigateUri="https://curseforge.com/minecraft-bedrock/texture-packs/vanilla-rtx-add-ons"
                                                         IsTextScaleFactorEnabled="False" />

                                        <TextBlock Text="A series of smaller packages that give certain blocks more interesting properties with ray tracing!"
                                                   FontSize="13"
                                                   Foreground="{ThemeResource OverlayTextBrush}"
                                                   Opacity="0.9"
                                                   TextWrapping="Wrap"
                                                   IsTextScaleFactorEnabled="False" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Secondary Pack 2: Chemistry RTX -->
                        <Border Grid.Column="2"
                                x:Name="ChemistryPanel"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Translation="0,0,32">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>

                            <Grid>
                                <Border CornerRadius="8">
                                    <Image Source="ms-appx:///Assets/covers/education.cover.png"
                                           Stretch="UniformToFill"
                                           IsHitTestVisible="False"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           MaxHeight="325"
                                           CacheMode="BitmapCache" />
                                </Border>

                                <!-- Overlay with title and description -->
                                <Border x:Name="ChemistryOverlay"
                                        CornerRadius="0"
                                        VerticalAlignment="Center"
                                        Padding="16,10,16,12"
                                        Opacity="0">
                                    <Border.Background>
                                        <AcrylicBrush TintColor="{ThemeResource OverlayBackgroundColor}"
                                                      TintOpacity="0.0"
                                                      TintLuminosityOpacity="0.64"
                                                      FallbackColor="{ThemeResource OverlayBackgroundColor}" />
                                    </Border.Background>

                                    <StackPanel Spacing="4">
                                        <HyperlinkButton Content="Chemistry RTX Extensions"
                                                         FontSize="18"
                                                         Foreground="{ThemeResource OverlayTextBrush}"
                                                         FontWeight="SemiBold"
                                                         Padding="0"
                                                         HorizontalAlignment="Left"
                                                         NavigateUri="https://www.curseforge.com/minecraft-bedrock/texture-packs/chemistry-rtx"
                                                         IsTextScaleFactorEnabled="False" />

                                        <TextBlock Text="Optional Vanilla RTX extensions to extend ray tracing support to Education Edition content!"
                                                   FontSize="13"
                                                   Foreground="{ThemeResource OverlayTextBrush}"
                                                   Opacity="0.9"
                                                   TextWrapping="Wrap"
                                                   IsTextScaleFactorEnabled="False" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        <!-- Secondary Pack 3: Creative RTX -->
                        <Border Grid.Column="4"
                                x:Name="CreativePanel"
                                CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                Translation="0,0,32">
                            <Border.Shadow>
                                <ThemeShadow />
                            </Border.Shadow>

                            <Grid>
                                <Border CornerRadius="8">
                                    <Image Source="ms-appx:///Assets/covers/creative.cover.png"
                                           Stretch="UniformToFill"
                                           IsHitTestVisible="False"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           MaxHeight="325"
                                           CacheMode="BitmapCache" />
                                </Border>

                                <!-- Overlay with title and description -->
                                <Border x:Name="CreativeOverlay"
                                        CornerRadius="0"
                                        VerticalAlignment="Center"
                                        Padding="16,10,16,12"
                                        Opacity="0">
                                    <Border.Background>
                                        <AcrylicBrush TintColor="{ThemeResource OverlayBackgroundColor}"
                                                      TintOpacity="0.0"
                                                      TintLuminosityOpacity="0.64"
                                                      FallbackColor="{ThemeResource OverlayBackgroundColor}" />
                                    </Border.Background>

                                    <StackPanel Spacing="4">
                                        <HyperlinkButton Content="Creative RTX Extension"
                                                         FontSize="18"
                                                         Foreground="{ThemeResource OverlayTextBrush}"
                                                         FontWeight="SemiBold"
                                                         Padding="0"
                                                         HorizontalAlignment="Left"
                                                         NavigateUri="https://www.curseforge.com/minecraft-bedrock/texture-packs/creative-rtx"
                                                         IsTextScaleFactorEnabled="False" />

                                        <TextBlock Text="Replaces Element block textures with high definition, exotic materials for creative builds with RTX!"
                                                   FontSize="13"
                                                   Foreground="{ThemeResource OverlayTextBrush}"
                                                   Opacity="0.9"
                                                   TextWrapping="Wrap"
                                                   IsTextScaleFactorEnabled="False" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Info Panel -->
                    <Border CornerRadius="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            Padding="16"
                            Translation="0,0,32">
                        <Border.Shadow>
                            <ThemeShadow />
                        </Border.Shadow>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
