<Window x:Class="Vanilla_RTX_App.DLSSBrowser.DLSSSwitcherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Vanilla_RTX_App.DLSSBrowser"
        Title="DLSS Swapper">
    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Border x:Name="LightThemeOverlay"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsHitTestVisible="False"
                Visibility="{ThemeResource LightThemeBackgroundVisibility}"
                Canvas.ZIndex="-1">
            <Border.Background>
                <SolidColorBrush Color="#17373737" />
            </Border.Background>
        </Border>

        <!-- Loading Screen -->
        <Grid x:Name="LoadingPanel"
              Visibility="Visible"
              Background="Transparent">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="20">
                <ProgressRing IsActive="True"
                              Width="100"
                              Height="100" />

                <Button x:Name="ManualSelectionButton"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        Padding="20,12,20,12"
                        Click="ManualSelectionButton_Click">
                    <StackPanel Spacing="4">
                        <TextBlock Text="System-wide scan is in progress"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   IsTextScaleFactorEnabled="False" />
                        <TextBlock x:Name="ManualSelectionText"
                                   Text="If it is taking too long, click to manually select game folder"
                                   FontSize="12"
                                   Opacity="0.75"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="400"
                                   IsTextScaleFactorEnabled="False" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DLL Selection UI -->
        <Grid x:Name="DllSelectionPanel"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Title Bar Area -->
            <Grid Grid.Row="0"
                  x:Name="TitleBarArea"
                  Background="Transparent">
                <!-- Centered Title -->
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <TextBlock Text=""
                               Margin="0,6,0,5"
                               VerticalAlignment="Center"
                               IsTextScaleFactorEnabled="False"
                               IsHitTestVisible="False"
                               x:Name="WindowTitle" />
                </Grid>

                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Width="52"
                        Height="36"
                        Margin="20,1,32,0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        CornerRadius="0, 0, 6, 6"
                        Click="CloseButton_Click"
                        ToolTipService.ToolTip="Close"
                        Translation="0,0,20"
                        IsTextScaleFactorEnabled="False">
                    <Button.Shadow>
                        <ThemeShadow />
                    </Button.Shadow>
                    <FontIcon Glyph="&#xF78A;"
                              FontSize="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0, -3, 0, 0"
                              IsTextScaleFactorEnabled="False" />
                </Button>
            </Grid>

            <!-- DLL List -->
            <Grid Grid.Row="1">
                <!-- Shadow receiver grid -->
                <Grid x:Name="ShadowReceiverGrid" />
                <ScrollViewer Padding="20, 20, 20, 0"
                              Margin="0,-5,0,0"
                              IsTextScaleFactorEnabled="False"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DllListContainer"
                                Spacing="8" />
                </ScrollViewer>
            </Grid>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyStatePanel"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed"
                        Spacing="12">
                <FontIcon Glyph="&#xF158;"
                          FontSize="48"
                          IsTextScaleFactorEnabled="False"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                <TextBlock x:Name="EmptyStateText"
                           Text="No DLSS versions cached"
                           FontSize="14"
                           IsTextScaleFactorEnabled="False"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>